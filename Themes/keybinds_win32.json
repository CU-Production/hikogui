{
    // General
    {"key": "ctrl+x",           "command": "text.edit.cut", "context": "text"},
    {"key": "shift+delete",     "command": "text.edit.cut", "context": "text"},
    {"key": "ctrl+c",           "command": "text.edit.copy", "context": "text"},
    {"key": "ctrl+insert",      "command": "text.edit.copy", "context": "text"},
    {"key": "ctrl+v",           "command": "text.edit.paste", "context": "text"},
    {"key": "shift+insert",     "command": "text.edit.paste", "context": "text"},
    {"key": "ctrl+z",           "command": "text.undo", "context": "text"},
    {"key": "alt+backspace",    "command": "text.undo", "context": "text"},
    {"key": "ctrl+y",           "command": "text.redo", "context": "text"},
    {"key": "ctrl+shift+z",     "command": "text.redo", "context": "text"},

    // Text navigation
    {"key": "left",             "command": "text.cursor.char.left", "context": "text"},
    {"key": "right",            "command": "text.cursor.char.right", "context": "text"},
    {"key": "down",             "command": "text.cursor.char.down", "context": "text"},
    {"key": "up",               "command": "text.cursor.char.up", "context": "text"},
    {"key": "pageup",           "command": "text.cursor.page.up", "context": "text"},
    {"key": "pagedown",         "command": "text.cursor.page.down", "context": "text"},
    {"key": "end",              "command": "text.cursor.line.end", "context": "text"},
    {"key": "home",             "command": "text.cursor.line.begin", "context": "text"},
    {"key": "ctrl-down",        "command": "text.scroll.line.down", "context": "text"},
    {"key": "ctrl-up",          "command": "text.scroll.line.up", "context": "text"},
    {"key": "ctrl-left",        "command": "text.cursor.word.left", "context": "text"},
    {"key": "ctrl-right",       "command": "text.cursor.word.right", "context": "text"},
    {"key": "ctrl-]",           "command": "text.cursor.bracket.match", "context": "text"},

    // Text manipulation
    {"key": "enter",            "command": "text.insert.enter", "context": "text"},
    {"key": "cntr+enter",       "command": "text.insert.line.up", "context": "text"},
    {"key": "cntr+shift+enter", "command": "text.insert.line.down", "context": "text"},
    {"key": "delete",           "command": "text.delete.char.next", "context": "text"},
    {"key": "cntr+delete",      "command": "text.delete.word.next", "context": "text"},
    {"key": "insert",           "command": "text.mode.insert", "context": "text"},
    {"key": "tab",              "command": "text.insert.tab", "context": "text"},
    {"key": "backspace",        "command": "text.delete.char.prev", "context": "text"},
    {"key": "ctrl+backspace",   "command": "text.delete.line.prev", "context": "text"},
    {"key": "ctrl+t",           "command": "text.swap.chars", "context": "text"},
    {"key": "shift+enter",      "command": "text.swap.chars", "context": "text"},
    {"key": "ctrl+alt+t",       "command": "text.swap.lines", "context": "text"},
    {"key": "ctrl+shift+t",     "command": "text.swap.words", "context": "text"},
    {"key": "ctrl+u",           "command": "text.case.lower", "context": "text"},
    {"key": "ctrl+shift+u",     "command": "text.case.upper", "context": "text"},

    // Text selection
    {"key": "shift+left",       "command": "text.select.char.left", "context": "text"},
    {"key": "shift+right",      "command": "text.select.char.right", "context": "text"},
    {"key": "shift+up",         "command": "text.select.char.left", "context": "text"},
    {"key": "shift+down",       "command": "text.select.char.right", "context": "text"},
    {"key": "shift+ctrl+left",  "command": "text.select.word.left", "context": "text"},
    {"key": "shift+ctrl+right", "command": "text.select.word.right", "context": "text"},
    {"key": "shift+end",        "command": "text.select.line.end", "context": "text"},
    {"key": "shift+begin",      "command": "text.select.line.up", "context": "text"},
    {"key": "shift+ctrl+end",   "command": "text.select.document.end", "context": "text"},
    {"key": "shift+ctrl+begin", "command": "text.select.document.up", "context": "text"},
    {"key": "shift+ctrl-]",     "command": "text.select.bracket.match", "context": "text"},
    {"key": "shift+pageup",     "command": "text.select.page.up", "context": "text"},
    {"key": "shift+pagedown",   "command": "text.select.page.down", "context": "text"},
    {"key": "ctrl+a",           "command": "text.select.document", "context": "text"},
    {"key": "ctrl+w",           "command": "text.select.word", "context": "text"}
}
